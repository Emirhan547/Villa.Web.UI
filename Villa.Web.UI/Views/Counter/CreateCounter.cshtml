@model CreateCounterDto
@{
    ViewData["Title"] = "Yeni Sayaç Bilgisi Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="taxt-danger"></span>
    <br />
    <label>Değer</label>
    <input type="text" asp-for="Count" class="form-control" />
    <span asp-validation-for="Count" class="taxt-danger"></span>
    <br />  
    <button class="btn btn-outline-dark">Kaydet</button>
</form>



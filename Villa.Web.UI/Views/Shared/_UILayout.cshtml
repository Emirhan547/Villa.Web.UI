
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Villa Agency - Real Estate HTML5 Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/VillaAgency-1.0.0/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/owl.css">
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/animate.css">
    <link rel="stylesheet"href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
<!--

TemplateMo 591 villa agency

https://templatemo.com/tm-591-villa-agency

-->
  </head>

<body>

  <!-- ***** Preloader Start ***** -->
  <div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
      <span class="dot"></span>
      <div class="dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
  <!-- ***** Preloader End ***** -->
    @await Component.InvokeAsync("_UISubHeader")

  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="index.html" class="logo">
                        <h1>Villa</h1>
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                      <li><a href="index.html" class="active">Ana Sayfa</a></li>
                      <li><a href="#properties">Mülklerimiz</a></li>
                      <li><a href="#contact">İletişim</a></li>
                      <li><a href="#"><i class="fa fa-calendar"></i>Ziyaret Planlayın</a></li>
                     
                  </ul>   
                   
                </nav>
            </div>
        </div>
    </div>
  </header>
  <!-- ***** Header Area End ***** -->
  @RenderBody()
    <div class="main-banner">
        <div class="owl-carousel owl-banner">
            <div class="item item-1">
                <div class="header-text">
                    <span class="category">Toronto, <em>Canada</em></span>
                    <h2>Hurry!<br>Get the Best Villa for you</h2>
                </div>
            </div>
            <div class="item item-2">
                <div class="header-text">
                    <span class="category">Melbourne, <em>Australia</em></span>
                    <h2>Be Quick!<br>Get the best villa in town</h2>
                </div>
            </div>
            <div class="item item-3">
                <div class="header-text">
                    <span class="category">Miami, <em>South Florida</em></span>
                    <h2>Act Now!<br>Get the highest level penthouse</h2>
                </div>
            </div>
        </div>
    </div>

  <footer>
    <div class="container">
      <div class="col-lg-8">
        <p>
            @DateTime.Now.Year Villa Agency Co., Ltd. Tüm Hakları Saklıdır 
        
        Design: <a rel="nofollow" href="https://templatemo.com" target="_blank">TemplateMo</a> Distribution: <a href="https://themewagon.com">ThemeWagon</a></p>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <!-- Bootstrap core JavaScript -->
    <script src="~/VillaAgency-1.0.0/vendor/jquery/jquery.min.js"></script>
    <script src="~/VillaAgency-1.0.0/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/isotope.min.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/owl-carousel.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/counter.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/custom.js"></script>

  </body>
</html>
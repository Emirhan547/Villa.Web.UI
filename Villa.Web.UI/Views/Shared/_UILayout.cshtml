@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <title>Villa Agency - Premium Emlak Çözümleri</title>

    <!-- Bootstrap core CSS -->
    <link href="~/VillaAgency-1.0.0/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/owl.css">
    <link rel="stylesheet" href="~/VillaAgency-1.0.0/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* Ek Stil İyileştirmeleri */
        .header-area {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
        }

        .main-nav .nav li a.active {
            color: #007bff !important;
            font-weight: 600;
        }

        footer {
            background: #1e1e1e;
            color: #fff;
            padding: 30px 0;
            margin-top: 50px;
        }

        .feature-card, .property-card {
            transition: all 0.3s ease;
        }

            .feature-card:hover, .property-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.15) !important;
            }
    </style>
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    @await Component.InvokeAsync("_UISubHeader")

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/Default/Index/" class="logo">
                            <h1 class="text-primary">Villa<span class="text-dark">Estate</span></h1>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="/Default/Index/" class="active">Ana Sayfa</a></li>
                            <li><a href="#properties">Mülklerimiz</a></li>
                            <li><a href="#contact">İletişim</a></li>
                            <li><a href="#" class="btn btn-primary btn-sm"><i class="fas fa-calendar me-1"></i>Ziyaret Planla</a></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    @RenderBody()

    <footer>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <p class="mb-0">
                        © @DateTime.Now.Year Villa Estate Emlak Ltd. Şti. Tüm Hakları Saklıdır.
                        <br>
                        <small class="text-light">Design: <a rel="nofollow" href="https://templatemo.com" target="_blank" class="text-light">TemplateMo</a> | Distribution: <a href="https://themewagon.com" class="text-light">ThemeWagon</a></small>
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/VillaAgency-1.0.0/vendor/jquery/jquery.min.js"></script>
    <script src="~/VillaAgency-1.0.0/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/isotope.min.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/owl-carousel.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/counter.js"></script>
    <script src="~/VillaAgency-1.0.0/assets/js/custom.js"></script>

    <script>
        // Smooth scroll için
        $(document).ready(function(){
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if( target.length ) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 80
                    }, 1000);
                }
            });
        });
    </script>
</body>
</html>
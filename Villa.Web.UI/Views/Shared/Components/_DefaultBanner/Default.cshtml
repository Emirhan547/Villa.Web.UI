@model List<ResultBannerDto>

<div class="main-banner">
    <div class="owl-carousel owl-banner">
        @foreach (var item in Model)
        {
            <div class="item" style="background-image: url('@item.ImageUrl'); background-size:cover; background-position:center; position:relative;">
                <div class="overlay" style="position:absolute; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.3);"></div>
                <div class="header-text text-center text-white position-relative" style="z-index:2; padding-top: 220px; padding-bottom: 220px;">
                    <span class="category bg-warning text-dark rounded-pill px-4 py-2 d-inline-block mb-4">
                        <em class="fst-italic fs-5 fw-bold">@item.City</em>
                    </span>
                    <h1 class="display-4 fw-bold mb-4 text-white" style="text-shadow: 2px 2px 8px rgba(0,0,0,0.7);">@item.Title</h1>
                    <div class="banner-buttons mt-5">
                        <a href="#properties" class="btn btn-primary btn-lg me-3 px-4 py-3">
                            <i class="fas fa-home me-2"></i>Mülkleri Keşfet
                        </a>
                        <a href="#contact" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-phone me-2"></i>İletişime Geç
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .main-banner .item {
        height: 100vh;
        min-height: 800px;
    }

    .banner-buttons .btn {
        padding: 15px 35px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .banner-buttons .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

    .category {
        font-size: 1.1rem;
        letter-spacing: 1px;
        border: 2px solid rgba(255,255,255,0.3);
    }

    .header-text h1 {
        font-size: 3.5rem;
        line-height: 1.2;
    }

    @@media (max-width: 768px) {
        .main-banner .item {
            height: 80vh;
            min-height: 600px;
        }

        .header-text h1 {
            font-size: 2.5rem;
        }

        .header-text {
            padding-top: 150px !important;
            padding-bottom: 150px !important;
        }

        .banner-buttons .btn {
            padding: 12px 25px;
            font-size: 1rem;
            display: block;
            margin: 10px auto;
            width: 80%;
        }
    }
</style>
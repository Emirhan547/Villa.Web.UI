@model List<ResultQuestDto>

@{
    int count = 0;
}

<div class="faq-section py-5 bg-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="section-heading text-center mb-5">
                    <h6 class="text-primary mb-2">| Sıkça Sorulan Sorular</h6>
                    <h2 class="fw-bold">Merak Ettiklerinizi Öğrenin</h2>
                </div>

                <div class="accordion" id="faqAccordion">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class="accordion-item border-0 mb-3 shadow-sm">
                                <h2 class="accordion-header" id="heading_@count">
                                    <button class="accordion-button @(count == 0 ? "" : "collapsed") fw-medium py-3"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#collapse_@count"
                                            aria-expanded="@(count == 0 ? "true" : "false")"
                                            aria-controls="collapse_@count">
                                        <span class="me-3 text-primary fw-bold">Q@(count + 1)</span>
                                        <span class="flex-grow-1 text-start">@item.Question</span>
                                    </button>
                                </h2>
                                <div id="collapse_@count"
                                     class="accordion-collapse collapse @(count == 0 ? "show" : "")"
                                     aria-labelledby="heading_@count"
                                     data-bs-parent="#faqAccordion">
                                    <div class="accordion-body bg-light py-4">
                                        <div class="d-flex">
                                            <span class="me-3 text-primary fw-bold">A:</span>
                                            <div class="flex-grow-1">
                                                @item.Answer
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            count++;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .accordion-button {
        background-color: #f8f9fa;
    }

        .accordion-button:not(.collapsed) {
            background-color: #e3f2fd;
            color: #0d6efd;
        }
</style>
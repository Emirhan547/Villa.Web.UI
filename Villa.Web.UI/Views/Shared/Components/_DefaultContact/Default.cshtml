@model List<ResultContactDto>

<div class="contact section" id="contact" style="background:#f8f9fa; padding:60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4 text-center mb-5">
                <h6>| Bizimle İletişime Geçin</h6>
                <h2>Emlak Danışmanlarımızla İletişime Geçebilirsiniz</h2>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-6">
                @foreach (var item in Model)
                {
                    <div id="map" class="mb-4">
                        <iframe src="@item.MapUrl"
                                style="width:100%; height:400px; border:0; border-radius:10px;"
                                allowfullscreen>
                        </iframe>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 border rounded bg-white text-center shadow-sm">
                                <i class="fas fa-phone text-primary fa-2x mb-2"></i>
                                <h6>@item.Phone</h6>
                                <span class="text-muted">Telefon Numarası</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 border rounded bg-white text-center shadow-sm">
                                <i class="fas fa-envelope text-primary fa-2x mb-2"></i>
                                <h6>@item.Email</h6>
                                <span class="text-muted">Email</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-6">
                <div class="card p-4 shadow-sm border-0">
                    @await Component.InvokeAsync("_DefaultMessage")
                </div>
            </div>
        </div>
    </div>
</div>